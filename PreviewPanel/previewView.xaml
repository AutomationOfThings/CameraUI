            </Grid.RenderTransform>
            <local:ScaleSlider Position="{Binding CurrentCamera.Tilt, Mode=OneWay}" Max="195" Min="-15" Height="12" Width="280" Visibility="{Binding Active}" RenderTransformOrigin="0.5,0.5" Margin="0">
